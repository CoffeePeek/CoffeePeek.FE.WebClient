          {
            "name": "minLon",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number",
              "format": "decimal"
            }
          },
          {
            "name": "maxLat",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number",
              "format": "decimal"
            }
          },
          {
            "name": "maxLon",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number",
              "format": "decimal"
