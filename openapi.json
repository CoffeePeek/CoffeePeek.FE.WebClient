            "type": "string",
            "format": "uuid"
          }
        }
      },
      "SendCoffeeShopToModerationRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "notValidatedAddress": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "priceRange": {
            "type": "string",
            "enum": [
              "Low",
              "Medium",
              "High"
            ]
          },
          "cityId": {
            "type": "string",
            "format": "uuid"
          },
          "shopContact": {
            "$ref": "#/components/schemas/ShopContactDto"
          },
          "schedules": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScheduleDto"
            }
          },
          "equipmentIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          },
          "coffeeBeanIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          },
          "roasterIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          },
          "brewMethodIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          },
          "shopPhotos": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "byte"
            }
          }
        }
      },
      "UpdateModerationCoffeeShopRequest": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "notValidatedAddress": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "priceRange": {
            "type": "string",
            "enum": [
              "Low",
              "Medium",
              "High"
            ]
          },
          "cityId": {
            "type": "string",
            "format": "uuid"
          },
          "shopContact": {
            "$ref": "#/components/schemas/ShopContactDto"
          },
          "schedules": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScheduleDto"
            }
          },
          "equipmentIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          },
          "coffeeBeanIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          },
          "roasterIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          },
          "brewMethodIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          },
          "shopPhotos": {
