    "/api/vacancies": {
      "get": {
        "summary": "Get job vacancies",
        "parameters": [
          {
            "name": "cityId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "jobType",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "All",
                "Barista",
                "Manager",
                "Cook"
              ],
              "default": "All"
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "perPage",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
